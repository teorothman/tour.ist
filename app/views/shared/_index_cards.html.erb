    <div class="card-product-infos">
    <h2><%= tour.title %> <span class="rating-detail"><i class="fa-solid fa-star"></i> <%= tour.user.average_rating %> (<%= tour.user.total_rating %>)</span></h2>
    <div class="details-inline">
      <p><i class="fa-solid fa-hourglass-start"></i> <%= tour.duration %> min</p>
