<%= link_to tour_path(tour.id) do %>
    <div class="card-product">
      <img class="tour-img" src="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/1c/0d/9f/02/caption.jpg"/>
      <div class="card-product-infos">
        <p><i class="fa-regular fa-calendar-days"></i> <strong><%= tour.date %></strong></p>
        <% if tour.title.length > 38 %>
            <% array = tour.title.split %>
            <h2 class="mt-1"><%= array[0..3].join(" ") + "..." %></h2>
            <% else %>
            <h2 class="mt-1"><%= tour.title %></h2>
        <% end %>
        <p>Language: <%= tour.language %></p>
        <p><i class="fa-solid fa-user"></i> Spots booked: <%= tour.max_spots - tour.spots_left %> / <%= tour.max_spots %></p>
      </div>
    </div>
<% end %>
