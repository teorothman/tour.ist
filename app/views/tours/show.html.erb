<div class="container">
  <h1>Tour Details</h1>

  <div class="card-product">
    <%= cl_image_tag @tour.photo.key, height: 300, width: 400, crop: :fill, class:"tour-img" %>
      <div class="card-product-infos">
        <h2><%= @tour.title %></h2>
        <h2><i class="fa-solid fa-language"></i><%= @tour.language %></h2>

        <div>
          <p>€<%= @tour.price_per_person %> / person</p>
          <p>🗓️ <%= @tour.date %></p>
          <p><i class="fa-solid fa-hourglass-start"></i><%= @tour.duration %> min</p>
          <p> 🟢 Spots left: <%= @tour.spots_left%> </p>
        </div>
        <p><%= @tour.description %></p>
      </div>
  </div>

    <div class="card-product">
      <div class="card-product-infos">

        <% if @tour.user == current_user %>
          <h2>You have <%= @tour.bookings.count %> bookings</h2>
          <% @tour.bookings.each do |b| %>

              <% if b.is_private %>
                <p>* Private booking by <%= b.user.first_name %></p>
              <% else %>
                <p><%= b.user.first_name %> has booked for: <%= b.nb_of_people %> participants</p>
              <% end %>
          <% end %>
        <% else %>
            <div>
              <p>💚 Thank you for booking with us!</p>
              <p>Please arrive 10 min before the starting time and bring comfy clothes!</p>
              <div class="card-product-infos">
                <img class="avatar-large" src="https://kitt.lewagon.com/placeholder/users/krokrob"/>
                <h2> A tour by: <%= @tour.user.first_name %></h2>
              </div>
            </div>
        <% end %>
      </div>
    </div>
    <%= render 'shared/booking_button' %>
</div>
