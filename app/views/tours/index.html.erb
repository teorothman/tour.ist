<div class="container">
  <h1>Tours available</h1>

  <% @tours.each do |tour| %>
    <%= link_to tour_path(tour) do %>
      <div class="card-product">
        <img src="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/1c/0d/9f/02/caption.jpg"/>
        <div class="card-product-infos">
        <h2><%= tour.title %> <span class="rating-detail">⭐️ <%= tour.user.average_rating %> (<%= tour.user.total_rating %>)</span></h2>
        <div class="details-inline">
          <p>⌛️ <%= tour.duration %> min</p>
          <p>€<%= tour.price_per_person %> / person</p>
          <p>🗣️ <%= tour.language %></p>
        </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
